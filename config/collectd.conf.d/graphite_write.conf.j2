LoadPlugin "write_graphite"

<Plugin "write_graphite">
    <Node "main">
       Host "{{ COLLECTD_GRAPHITE_HOST|default('localhost') }}"
       Port {{ COLLECTD_GRAPHITE_PORT|default('2003') }}
       Prefix "{{ COLLECTD_GRAPHITE_PREFIX|default('servers.') }}"
       #Postfix ""
       Protocol "tcp"
       LogSendErrors false
       EscapeCharacter "_"
       SeparateInstances true
       StoreRates false
       AlwaysAppendDS false
       #UseTags false
    </Node>
</Plugin>
